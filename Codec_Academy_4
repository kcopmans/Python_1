# using date time using library

from datetime import datetime

# retrieving current time using .now() function for datetime

from datetime import datetime
print datetime.now()

from datetime import datetime
now = datetime.now()
print now

# extracting information from datetime

from datetime import datetime
now = datetime.now()
print now
print now.year
print now.month
print now.day

# using String substitution in parallel

from datetime import datetime
now = datetime.now()

print '%s/%s/%s' % (now.month, now.day, now.year)

# getting back hour, minute and second from datetime

from datetime import datetime
now = datetime.now()

print '%s:%s:%s' % (now.hour, now.minute, now.second)

# aggregating it all together into a single output

from datetime import datetime
now = datetime.now()

print '%s/%s/%s %s:%s:%s' % (now.month, now.day, now.year, now.hour, now.minute, now.second)
